@model SEP_Demo.Models.User

@using (Html.BeginForm("EditStatusAccount", "Admins", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="alert alert-success"><input type="radio" name="status" value="2" /> Moderator</div>
    <div class="alert alert-info"><input type="radio" name="status" value="3" /> User</div>
     
    <div class="modal-footer ">
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
